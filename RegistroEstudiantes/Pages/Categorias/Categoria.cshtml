@page

    <h1>pagina de categorias</h1>
    <div ng-app="categorias">

        <div ng-controller="categoriasCtrl">

            <div class="form-group">
                <label>Id</label>
                <input type="text" class="form-control" ng-model="Categoria.Id" readonly />
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" ng-model="Categoria.Nombre" />
            </div>

            <h2>Productos</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="p in Categoria.Productos">
                        <td>{{p.Id}}</td>
                        <td> <input type="text" class="form-control" ng-model="p.Nombre" /> </td>
                        <td> <button class="btn btn-danger">Eliminar</button> </td>
                    </tr>
                </tbody>
            </table>

            <button class="btn btn-primary" ng-click="AgregarProducto()">Agregar Prodocto</button>
            <button class="btn btn-success float-right" ng-click="GuardarCambios()">Guardar</button>

        </div>

    </div>



    @section Scripts{
        <script src="~/scripts/angular.js"></script>        
        <script src="~/scripts/categoria/categorias.js"></script>
    }